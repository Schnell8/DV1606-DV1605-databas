        <label for="antal">Antal</label>
        <input id="antal" type="number" name="antal" readonly value="<%= res.antal %>">

        <label for="kategori">Kategori</label>
        <input id="kategori" type="text" name="kategori" readonly value="<%= res.kategori %>">

